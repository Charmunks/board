{% extends "base.njk" %}

{% block content %}
<div class="container">
  {% if error %}
    <div class="alert alert-error">{{ error }}</div>
    <a href="/messages">&larr; Back to messages</a>
  {% else %}
    <a href="/messages" class="back-link">&larr; Back to messages</a>

    <article class="message">
      <header class="message-header">
        <h1>{{ message.title }}</h1>
        <p class="message-meta">
          Posted by <a href="/profile/{{ message.username }}" class="author-link"><strong>{{ message.username }}</strong></a>
          {% if message.createdAt or message.createdat %}
            on {{ (message.createdAt or message.createdat) | date }}
          {% endif %}
        </p>
      </header>

      <div class="message-body">
        <p>{{ message.content }}</p>
      </div>

      <div class="message-actions">
        <div class="voting">
          {% if user %}
            <form method="POST" action="/messages/{{ message.id }}/vote" class="vote-form">
              <input type="hidden" name="value" value="1">
              <button type="submit" class="vote-btn {{ 'active' if userVote === 1 }}">‚ñ≤</button>
            </form>
          {% else %}
            <span class="vote-btn disabled">‚ñ≤</span>
          {% endif %}
          
          <span class="vote-count">{{ voteCount }}</span>
          
          {% if user %}
            <form method="POST" action="/messages/{{ message.id }}/vote" class="vote-form">
              <input type="hidden" name="value" value="-1">
              <button type="submit" class="vote-btn {{ 'active' if userVote === -1 }}">‚ñº</button>
            </form>
          {% else %}
            <span class="vote-btn disabled">‚ñº</span>
          {% endif %}
        </div>

        <div class="reactions">
          {% set emojis = ['üëç', '‚ù§Ô∏è', 'üòÇ', 'üòÆ', 'üò¢', 'üéâ'] %}
          {% for emoji in emojis %}
            {% set count = 0 %}
            {% for r in reactions %}
              {% if r.emoji === emoji %}
                {% set count = r.count %}
              {% endif %}
            {% endfor %}
            {% set hasReacted = emoji in userReactions %}
            
            {% if user %}
              <form method="POST" action="/messages/{{ message.id }}/react" class="reaction-form">
                <input type="hidden" name="emoji" value="{{ emoji }}">
                <button type="submit" class="reaction-btn {{ 'active' if hasReacted }}">
                  {{ emoji }} <span class="reaction-count">{{ count if count else '' }}</span>
                </button>
              </form>
            {% else %}
              <span class="reaction-btn disabled">
                {{ emoji }} <span class="reaction-count">{{ count if count else '' }}</span>
              </span>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </article>

    <section class="comments-section">
      <h2>Comments ({{ comments.length }})</h2>

      {% if user %}
        <form method="POST" action="/messages/{{ message.id }}/comments" class="comment-form">
          <textarea name="content" placeholder="Write a comment..." required rows="3"></textarea>
          <button type="submit" class="btn btn-primary">Post Comment</button>
        </form>
      {% else %}
        <p class="login-prompt"><a href="/auth/login">Log in</a> to leave a comment</p>
      {% endif %}

      <div class="comments-list">
        {% if comments.length === 0 %}
          <p class="empty-state">No comments yet.</p>
        {% endif %}

        {% for comment in comments %}
          <div class="comment">
            <div class="comment-header">
              <a href="/profile/{{ comment.username }}" class="author-link"><strong>{{ comment.username }}</strong></a>
              {% if comment.createdAt or comment.createdat %}
                <span class="comment-date">{{ (comment.createdAt or comment.createdat) | date }}</span>
              {% endif %}
            </div>
            <p class="comment-content">{{ comment.content }}</p>
          </div>
        {% endfor %}
      </div>
    </section>
  {% endif %}
</div>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 1rem;
    color: var(--accent, #338eda);
  }

  .message {
    border: 1px solid var(--border, #ccc);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  .message-header h1 {
    margin: 0 0 0.5rem;
  }

  .message-meta {
    color: var(--muted, #8492a6);
    font-size: 0.875rem;
    margin: 0;
  }

  .message-body {
    margin: 1.5rem 0;
    line-height: 1.6;
  }

  .message-actions {
    display: flex;
    gap: 2rem;
    align-items: center;
    flex-wrap: wrap;
    padding-top: 1rem;
    border-top: 1px solid var(--border, #ccc);
  }

  .voting {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .vote-form {
    display: inline;
  }

  .vote-btn {
    background: none;
    border: 1px solid var(--border, #ccc);
    padding: 0.25rem 0.5rem;
    cursor: pointer;
    border-radius: 4px;
    font-size: 1rem;
  }

  .vote-btn:hover:not(.disabled) {
    background: var(--accent, #338eda);
    color: white;
  }

  .vote-btn.active {
    background: var(--accent, #338eda);
    color: white;
  }

  .vote-btn.disabled {
    cursor: not-allowed;
    opacity: 0.5;
  }

  .vote-count {
    font-weight: bold;
    font-size: 1.25rem;
    min-width: 2rem;
    text-align: center;
  }

  .reactions {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .reaction-form {
    display: inline;
  }

  .reaction-btn {
    background: none;
    border: 1px solid var(--border, #ccc);
    padding: 0.25rem 0.5rem;
    cursor: pointer;
    border-radius: 4px;
    font-size: 1rem;
  }

  .reaction-btn:hover:not(.disabled) {
    background: var(--accent, #338eda);
  }

  .reaction-btn.active {
    background: var(--accent, #338eda);
    border-color: var(--accent, #338eda);
  }

  .reaction-btn.disabled {
    cursor: not-allowed;
  }

  .reaction-count {
    font-size: 0.75rem;
  }

  .comments-section h2 {
    margin-bottom: 1rem;
  }

  .comment-form {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .comment-form textarea {
    padding: 0.75rem;
    border: 1px solid var(--border, #ccc);
    border-radius: 4px;
    font-family: inherit;
    font-size: 1rem;
    resize: vertical;
  }

  .comment-form .btn {
    align-self: flex-start;
  }

  .btn {
    padding: 0.5rem 1rem;
    text-decoration: none;
    border-radius: 4px;
    border: none;
    cursor: pointer;
  }

  .btn-primary {
    background: var(--accent, #338eda);
    color: white;
  }

  .login-prompt {
    padding: 1rem;
    background: var(--bg-secondary, #f5f5f5);
    border-radius: 4px;
    margin-bottom: 1.5rem;
  }

  .comments-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .comment {
    padding: 1rem;
    border: 1px solid var(--border, #ccc);
    border-radius: 4px;
  }

  .comment-header {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .comment-date {
    color: var(--muted, #8492a6);
    font-size: 0.875rem;
  }

  .comment-content {
    margin: 0;
    line-height: 1.5;
  }

  .empty-state {
    color: var(--muted, #8492a6);
    text-align: center;
    padding: 1rem;
  }

  .alert {
    padding: 1rem;
    border-radius: 4px;
    margin-bottom: 1rem;
  }

  .alert-error {
    background: #fee;
    color: #c00;
    border: 1px solid #fcc;
  }
</style>
{% endblock %}
