{% extends "base.njk" %}

{% block content %}
<div class="container">
  <h1>New Message</h1>

  {% if error %}
    <div class="alert alert-error">{{ error }}</div>
  {% endif %}

  <form method="POST" action="/messages" class="form">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" required maxlength="255" placeholder="Enter a title...">
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      <textarea id="content" name="content" required rows="6" placeholder="What's on your mind?"></textarea>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Post Message</button>
      <a href="/messages" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</div>

<style>
  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem;
  }

  .form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-weight: 600;
  }

  .form-group input,
  .form-group textarea {
    padding: 0.75rem;
    border: 1px solid var(--border, #ccc);
    border-radius: 4px;
    font-size: 1rem;
    font-family: inherit;
  }

  .form-group textarea {
    resize: vertical;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .btn-primary {
    background: var(--accent, #338eda);
    color: white;
  }

  .btn-secondary {
    background: var(--muted, #8492a6);
    color: white;
  }

  .alert {
    padding: 1rem;
    border-radius: 4px;
    margin-bottom: 1rem;
  }

  .alert-error {
    background: #fee;
    color: #c00;
    border: 1px solid #fcc;
  }
</style>
{% endblock %}
